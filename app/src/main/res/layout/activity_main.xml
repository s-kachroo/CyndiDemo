<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorStudent"
        android:elevation="5dp"
        android:padding="10dp"
        android:transitionName="TopBar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyndi"
            android:textColor="#fff"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Student Counter"
        android:textAlignment="center"
        android:textColor="@color/colorStudent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_select"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ina" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/image_select"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="James Bond"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_student_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College ID : CE-007-2K20"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_student_subjects_enrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subjects Enrolled : 9"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_dive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/vector_asset_books" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv_dive"
                android:gravity="center"
                android:text="My Subjects"
                android:textSize="25sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

