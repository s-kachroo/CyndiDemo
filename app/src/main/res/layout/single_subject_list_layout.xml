<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subject_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:textStyle="bold"
                    android:text="Data Structures"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_is_there_new_notification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_subject_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CE-402C"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mr. Donald Trump"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_last_Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Activity - XX:XX PM"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>