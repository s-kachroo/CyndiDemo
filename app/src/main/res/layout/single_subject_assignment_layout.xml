<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_assignment_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="5dp"
                android:src="@drawable/vector_asset_subject_resources" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_assignment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stacks and Queues"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_assignment_submission_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="Due 08/20/2020"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_assignment_posted_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                android:maxLines="1"
                android:gravity="center"
                android:text="Posted 06/08/2020"
                android:textStyle="italic"
                android:textSize="14sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>